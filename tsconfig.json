{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "commonjs", 
    "moduleResolution": "node",
    "resolveJsonModule": true,                   
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                      
    "rootDir": "./src"                       
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
